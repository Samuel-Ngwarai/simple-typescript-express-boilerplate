{
    "rootDir": "../",
    "testMatch": [
        "**/__tests__/integration/**/*.test.ts"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage/integration",
    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100
        }
    },
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/utils/logger.ts",
      "!src/**/__tests__/**",
      "!src/config/**.ts"
    ],
  "errorOnDeprecated": true,
  "snapshotFormat": {
    "escapeString": true,
    "printBasicPrototype": true
  }
}
